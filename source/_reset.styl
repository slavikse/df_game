// normalize 4.2.0 + reset.css 2.0 + правки и добавления

// не очень...
*,
*::before,
*::after {
  box-sizing: border-box;
}

html {
  font-family: sans-serif;
  font-size: 16px;
  -ms-text-size-adjust: 100%; // prevent adjustments of font size after ...
  -webkit-text-size-adjust: 100%; // ... orientation changes in IE and iOS
  -webkit-tap-highlight-color: transparent;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  font-size: 1rem;
  line-height: 1;
  color: #373a3c;
  background: #fff;
  text-rendering: optimizeSpeed;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body,
p,
ol,
ul,
h1,
h2,
h3,
h4,
h5,
h6 {
  margin: 0;
}

a {
  color: inherit;
  text-decoration: none;
  outline: 0; // FF
  -webkit-text-decoration-skip: objects; // iOS 8+, safari 8+
}

a:active,
a:hover {
  outline-width: 0; // remove the outline on focused links in all browsers
}

img {
  max-width: 100%;
  height: auto;
  vertical-align: middle;
}

button,
select {
  cursor: pointer;
  background-color: transparent;
  text-transform: none; // remove the inheritance of text transform in FF
}

button,
input {
  overflow: visible; // show the overflow in IE and Edge
}

button,
input,
select,
textarea {
  margin: 0; // remove the margin in FF and Safari
  padding: 0;
  font: inherit; // change font properties to `inherit` in all browsers
  border: 0;
  outline: 0;
}

// remove the inner border and padding in FF
button::-moz-focus-inner,
[type="button"]::-moz-focus-inner,
[type="reset"]::-moz-focus-inner,
[type="submit"]::-moz-focus-inner {
  border-style: none;
  padding: 0;
}

a,
button,
input,
label,
select,
textarea {
  touch-action: manipulation;
}

ol,
ul {
  padding: 0;
  list-style: none;
}

template {
  display: none; // add the correct display in IE
}

table {
  border-collapse: collapse;
  border-spacing: 0;
}
